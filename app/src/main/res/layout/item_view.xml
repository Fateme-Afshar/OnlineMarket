<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.onlinemarket.R" />

        <variable
            name="product"
            type="com.example.onlinemarket.model.Product" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:setImage="@{product.imgUrls.get(0)}"
                tools:src="@drawable/img_guitar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_product_name"
                style="@style/TextStylePersian"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textStyle="normal"
                android:text="@{product.name}"
                android:textSize="9sp"
                android:layout_weight="1"
                android:layout_gravity="right"
                tools:text="گیتار" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStylePersian"
                android:id="@+id/tv_product_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="normal"
                tools:text="قیمت محصول :"
                android:layout_weight="1"
                android:text='@{"قیمت محصول : "+String.valueOf(product.price)}'
                />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStylePersian"
                android:id="@+id/tv_product_regular_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="normal"
                android:layout_weight="1"
                tools:text="قیمت  با تخفیف محصول : "
                android:background="@drawable/solid_green_light"
                android:text='@{"قیمت محصول با تخفیف : "+String.valueOf(product.regularPrice)}'
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>