        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:gravity="center"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_guitar"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStylePersian"
                android:id="@+id/tv_product_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                tools:text="گیتار"

                android:background="@drawable/solid_grey"
                android:textSize="12sp"
                />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStylePersian"
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="قیمت محصول :"

                />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStylePersian"
                android:id="@+id/tv_product_regular_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="قیمت  با تخفیف محصول : "
                android:background="@drawable/solid_green_light"

                />

            <com.google.android.material.button.MaterialButton
                style="@style/TextStylePersian"
                android:id="@+id/btn_product_more_info"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/more_info_product"
                android:backgroundTint="@color/beauty_red"
                android:textColor="@color/white"
                />

        </LinearLayout>
</layout>