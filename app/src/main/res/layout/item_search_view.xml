<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="com.example.onlinemarket.model.Product" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        >

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_product"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:src="@drawable/img_guitar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:setImage="@{product.imgUrls.get(0)}"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_product_title"
                style="@style/TextStylePersian"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_toStartOf="@+id/imv_product"
                android:layout_toLeftOf="@+id/imv_product"
                tools:text="گیتار کلاسیک رویال"
                android:text="@{product.name}"
                android:textAlignment="textStart"
                android:textSize="10sp"
                android:gravity="start" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_product_price"
                style="@style/TextStylePersian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_title"
                android:layout_toStartOf="@+id/imv_product"
                android:layout_toLeftOf="@+id/imv_product"
                android:layout_weight="1"
                android:text='@{"قیمت محصول : "+String.valueOf(product.price)}'
                android:textStyle="normal"
                android:textAlignment="textStart"
                tools:text="قیمت محصول :"
                android:gravity="start" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_product_regular_price"
                style="@style/TextStylePersian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_price"
                android:layout_toStartOf="@+id/imv_product"
                android:layout_toLeftOf="@+id/imv_product"
                android:layout_weight="1"
                android:background="@drawable/solid_green_light"
                android:text='@{"قیمت محصول با تخفیف : "+String.valueOf(product.regularPrice)}'
                android:textStyle="normal"
                android:textAlignment="textStart"
                tools:text="قیمت  با تخفیف محصول : "
                android:gravity="start" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>