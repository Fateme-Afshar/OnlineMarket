<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
        <variable
            name="viewModel"
            type="com.example.onlinemarket.viewModel.ProductViewModel" />
    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ViewFlipper
            android:id="@+id/img_slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name"
            style="@style/TextStylePersian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_min="200dp"
            android:text="@{viewModel.product.name}"
            tools:text="گیتار"
            android:textSize="15sp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/solid_grey"
            app:layout_constraintStart_toStartOf="@+id/img_slider"
            app:layout_constraintEnd_toEndOf="@+id/img_slider"
            app:layout_constraintTop_toBottomOf="@+id/img_slider"
            />

        <WebView
            style="@style/TextStylePersian"
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/avatars"
            app:showDescription="@{viewModel.product.description}"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:minHeight="100dp"
            android:textDirection="rtl"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bar_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_description"
            app:barrierDirection="end"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStylePersian"
                android:id="@+id/tv_regular_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"قیمت محصول با تخفیف : "+viewModel.product.regularPrice}'
                app:layout_constraintTop_toBottomOf="@+id/tv_description"
                app:layout_constraintEnd_toStartOf="@+id/tv_price"
                android:textSize="11sp"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/solid_green_light"
                android:textColor="@color/white"
                android:layout_weight="1"
                />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStylePersian"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"قیمت محصول  : "+viewModel.product.price}'
                app:layout_constraintTop_toBottomOf="@+id/tv_description"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:padding="8dp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton.PinkBackground"
            android:id="@+id/btn_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/add_to_basket"
            android:fontFamily="@font/sahel_bold"
            android:textSize="14sp"
            />
    </LinearLayout>
</ScrollView>
</layout>
